<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Coral Accent Bar -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_marginBottom="12dp"
            android:background="@color/coral_primary"
            android:backgroundTint="@color/coral_primary" />

        <TextView
            android:id="@+id/tvHackathonTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hackathon Title"
            android:textColor="@color/text_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Date Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <View
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@color/coral_primary"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvHackathonDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="March 15-17, 2024"
                android:textColor="@color/coral_primary"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Location Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <View
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@color/text_gray"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvHackathonLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="San Francisco, CA"
                android:textColor="@color/text_gray"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvHackathonDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description of the hackathon..."
            android:textColor="#424242"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:maxLines="2"
            android:ellipsize="end" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
